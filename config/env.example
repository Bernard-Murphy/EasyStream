# --- API ---
DATABASE_URL=postgresql://easystream:easystream@localhost:5433/easystream?schema=public
JWT_SECRET=dev_only_change_me
API_PORT=4000

# --- Web ---
NEXT_PUBLIC_API_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_API_REST_URL=http://localhost:4000
NEXT_PUBLIC_API_GRAPHQL_WS_URL=ws://localhost:4000/graphql

# --- Storj (S3 compatible) ---
REGION=us-east-1
STORJ_ENDPOINT=
STORJ_SECRET_ACCESS_ID=
STORJ_SECRET_ACCESS_KEY=
STORJ_BUCKET=

# --- Stream sizes (MB) ---
CLIP_LENGTH=50
STREAM_LENGTH=250
NEXT_PUBLIC_CLIP_LENGTH=50

# --- Processing mode ---
# "lambda" will invoke the lambda/assemble-stream function (recommended for prod)
# "local" will assemble via ffmpeg on the API server (good for local dev)
ASSEMBLY_MODE=local
ASSEMBLE_STREAM_LAMBDA_NAME=

# --- Stale peer pruning ---
STALE_PEER_SECONDS=30

# --- Waterfall limits ---
DIRECT_VIEWER_LIMIT=4
CHILD_STREAMER_LIMIT=2
CHILD_VIEWER_LIMIT=4

# --- Moderator seed (optional) ---
MOD_USERNAME=admin
MOD_EMAIL=admin@example.com
MOD_PASSWORD=change_me


